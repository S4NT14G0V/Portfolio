---
import Experience from '../components/Experience.astro';

const { lang } = Astro.props;

const title = lang?.experiences?.title ?? "Titulo de Secci√≥n";
const experiences = lang?.experiences?.list ?? [];
const link = lang?.experiences?.link?.label;
const latest = lang?.experiences?.latest?.label;
const id = lang?.experiences?.id;
---

<section id={id} class="flex flex-col justify-center items-center gap-16 py-16 sm:py-32 w-full px-10 sm:w-1/2 min-h-screen z-20">
    <p class="text-2xl font-bold text-black/85 dark:text-white/85 z-20 text-center">{title}</p>    
    <Experience exp={experiences} link={link} latest={latest}/>
</section>