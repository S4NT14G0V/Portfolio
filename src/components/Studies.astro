---
import StudiesItem from "./StudiesItem.astro";
import es from '../i18n/es.ts';

interface Studies {
  title: string;
  date: string;
  location: string;
  description: string;
}

const { studies } = Astro.props;

const STUDIES: Studies[] = studies;
---

<ul
  class="relative w-full border-s border-black/40 dark:border-gray-700 flex flex-col gap-10"
>
  {STUDIES.map((study) => <StudiesItem {...study} />)}
</ul>
