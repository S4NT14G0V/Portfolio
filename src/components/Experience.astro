---
import ExperienceItem from "./ExperienceItem.astro";

interface Experience {
  title: string;
  date: string;
  description: string;
  responsibilities?: string[];
  link?: string;
  latest: boolean;
}

const { exp, latest, link } = Astro.props;

const EXPERIENCE: Experience[] = exp;

---

<ul
  class="relative w-full border-s border-black/40 dark:border-gray-700 flex flex-col gap-10"
>
  {EXPERIENCE.map((experience) => <ExperienceItem {...experience} latestLabel={latest} linkLabel={link} />)}
</ul>
